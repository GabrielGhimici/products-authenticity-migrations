{
    "compilerOptions": {
        "baseUrl": "./",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "importHelpers": true,
        "target": "es2016",
        "lib": ["es2016"],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist/migrations",
        "experimentalDecorators":true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "./node_modules"
    ]
}
